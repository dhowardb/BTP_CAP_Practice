<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <TableSelectDialog
        id="myDialog"
        noDataText="No Data Found"
        title="Child Table"
        cancel="handleClose"
        confirm="handleItemPress"
        search="handleSearch"
        items='{_Child}'
        
    >
        <ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle">
            <cells>
                <Text id="_IDGenText" text="{ParentId}" />
                <Text id="_IDGenText1" text="{FieldWithPercent}" />
                <Text id="_IDGenText2" text="{StringProperty}" />
            </cells>
        </ColumnListItem>
        <columns>
            <Column id="_IDGenColumn" width="12em">
                <header>
                    <Text id="_IDGenText3" text="Column 1" />
                </header>
            </Column>
            <Column id="_IDGenColumn5"
                minScreenWidth="Tablet"
                demandPopin="true"
            >
                <header>
                    <Text id="_IDGenText4" text="Column 2" />
                </header>
            </Column>
            <Column id="_IDGenColumn6"
                minScreenWidth="Desktop"
                demandPopin="true"
            >
                <header>
                    <Text id="_IDGenText5" text="Column 3" />
                </header>
            </Column>
        </columns>
    </TableSelectDialog>
</core:FragmentDefinition>
