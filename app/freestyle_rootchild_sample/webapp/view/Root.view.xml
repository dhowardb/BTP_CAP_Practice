<mvc:View xmlns:filterbar="sap.ui.comp.filterbar"
    xmlns:smarttable="sap.ui.comp.smarttable"
    controllerName="freestylerootchildsample.controller.Root"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <Table
                id="customTable"
                items="{
          path: '/Root', 
          parameters: {
            $expand: '_Child'
          }
        }"
            >
                <!-- Columns Definitions -->
                <columns>
                    <Column id="_IDGenColumn1">
                        <Text
                            id="_IDGenText"
                            text="String Property"
                        />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Text
                            id="_IDGenText1"
                            text="ID"
                        />
                    </Column>
                    <Column id="_IDGenColumn3">
                        <Text
                            id="_IDGenText2"
                            text="Description"
                        />
                    </Column>
					<Column id="_IDGenColumn4">
                        <Text
                            id="_IDGenText6"
                            text="Child String"
                        />
                    </Column>
                </columns>

                <!-- Template for rows -->
                <items>
                    <ColumnListItem id="_IDGenColumnListItem">
                        <cells>
                            <Button
                                id="_IDGenButton1"
                                text="{StringProperty}"
                            />
                            <Text
                                id="_IDGenText4"
                                text="{ID}"
                            />
                            <Text
                                id="_IDGenText5"
                                text="{Description}"
                            />
							<Button
                                id="_IDGenButton2"
                                text="Show Child Table"
								visible="{UpdateHidden}"
                                press="onShowChildTable"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
