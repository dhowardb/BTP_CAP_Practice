<mvc:View xmlns:core="sap.ui.core" xmlns:filterbar="sap.ui.comp.filterbar" xmlns:smartvariants="sap.ui.comp.smartvariants" xmlns:f="sap.f"
    xmlns:smarttable="sap.ui.comp.smarttable"
    controllerName="freestylerootchildsample.controller.Root"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <f:DynamicPage id="_IDGenDynamicPage" >
        <f:title>
            <f:DynamicPageTitle id="_IDGenDynamicPageTitle" >
                <f:heading>
                    <smartvariants:SmartVariantManagement id="_IDGenSmartVariantManagement" showExecuteOnSelection="true"></smartvariants:SmartVariantManagement>
                    
                </f:heading>
                <f:expandedContent>
						<Label id="_IDGenLabel" text="No filters active" />
					</f:expandedContent>
					<f:snappedContent>
						<Label id="_IDGenLabel1" text="No filters active" />
					</f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader id="_IDGenDynamicPageHeader" >
                <f:content>
                    <filterbar:FilterBar id="_IDGenFilterBar" persistencyKey="persistKey" useToolbar="false" search="onSearch" filterChange="onFilterChange" afterVariantLoad="onAfterVariantLoad">
                        <filterbar:filterGroupItems>
                            <filterbar:FilterGroupItem id="_IDGenFilterGroupItem" name="StringProperty" label="String Props" groupName="Group1" visibleInFilterBar="true">
                                <filterbar:control>
                                    <MultiComboBox id="_IDGenMultiComboBox" name="StringProperty" selectionChange="onSelectionChange" items="{ path: '/Root' }">
                                        <core:Item id="_IDGenItem" key="{Id}" text="{StringProperty}"></core:Item>
                                    </MultiComboBox>
                                </filterbar:control>
                            </filterbar:FilterGroupItem>
                        </filterbar:filterGroupItems>
                        <filterbar:filterGroupItems>
                            <filterbar:FilterGroupItem id="_IDGenFilterGroupItem1" name="Description" label="Description" groupName="Group1" visibleInFilterBar="true">
                                <filterbar:control>
                                    <MultiComboBox id="_IDGenMultiComboBox1" name="Description" selectionChange="onSelectionChange" items="{ path: '/Root' }">
                                        <core:Item id="_IDGenItem1" key="{Id}" text="{Description}"></core:Item>
                                    </MultiComboBox>
                                </filterbar:control>
                            </filterbar:FilterGroupItem>
                        </filterbar:filterGroupItems>
                    </filterbar:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table id="_IDGenTable"
                items="{
          path: '/Root', 
          parameters: {
            $expand: '_Child'
          }
        }"
            >
                <!-- Columns Definitions -->
                <columns>
                    <Column id="_IDGenColumn">
                        <Text
                            id="_IDGenText"
                            text="String Property"
                        />
                    </Column>
                    <Column id="_IDGenColumn1">
                        <Text
                            id="_IDGenText1"
                            text="ID"
                        />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Text
                            id="_IDGenText2"
                            text="Description"
                        />
                    </Column>
					<Column id="_IDGenColumn3">
                        <Text
                            id="_IDGenText3"
                            text="Child String"
                        />
                    </Column>
                </columns>

                <!-- Template for rows -->
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1">
                        <cells>
                            <Button
                                id="_IDGenButton"
                                text="{StringProperty}"
                            />
                            <Text
                                id="_IDGenText4"
                                text="{ID}"
                            />
                            <Text
                                id="_IDGenText5"
                                text="{Description}"
                            />
							<Button
                                id="_IDGenButton1"
                                text="Show Child Table"
								visible="{UpdateHidden}"
                                press="onShowChildTable"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
    
</mvc:View>
