<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Dialog
		id="mainDialog"
		title="Hello {StringProperty}">
		<content>
			<VBox class="sapUiSmallMargin" id="formContainer" >
				<f:SimpleForm id="SimpleFormChangeColumn_twoGroups234"
					editable="true"
					layout="ColumnLayout"
					title="Personal"
					columnsM="2"
					columnsL="2"
					columnsXL="2"
                    >
					<f:content>
						<core:Title text="Information" />
						<Label text="Choose Owner" />
                        <Select id="Owner" items="{ path: '/Risks'}">
							<items>
                                <core:Item key="{Owner}" text="{Owner}"></core:Item>
							</items>
						</Select>
					</f:content>
				</f:SimpleForm>
			</VBox>
		</content>
		<footer>
			<Toolbar>
				<content>
					<Button id="messagePopoverBtn"
						press=".handleMessagePopoverPress"
						ariaHasPopup="Dialog" />
					<ToolbarSpacer />
					<Button type="Accept"
							text="Save"
							press="onSubmitForm" />
					<Button id="Reject"
						text="Reject"
						type="Reject"
						press="closeDialog"
						ariaHasPopup="Dialog" />
				</content>
			</Toolbar>
		</footer>
	</Dialog>
</core:FragmentDefinition>